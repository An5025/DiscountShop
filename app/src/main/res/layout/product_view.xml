<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <LinearLayout
        android:id="@+id/pr_name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="@string/product_name_r"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/orange"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/prduct_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/product_name"
            android:textSize="20sp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/product_brand_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pr_name_layout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/brand_r"
            android:textSize="20sp"
            android:textColor="@color/orange"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/pr_brand_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/product_name"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pr_capacity_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_brand_layout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/capacity_r"
            android:textSize="20sp"
            android:textColor="@color/orange"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/pr_capacity_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/product_name"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pr_disc_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pr_capacity_layout"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/discount_off"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/orange"/>

        <TextView
            android:id="@+id/product_disc_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_30"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/off"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pr_count_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/pr_disc_layout">
        <LinearLayout
            android:id="@+id/linearlayout2"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="2"
            android:layout_width="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/date_view"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/orange"/>

            <TextView
                android:id="@+id/pr_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_8"
                android:textSize="20sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/product_vote_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pr_vote_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/upvote"
                android:drawableLeft="@drawable/ic_thumb_up_black_24dp"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>